{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "generate"]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "outputs": ["{projectRoot}/dist"]
    }
  },
  "release": {
    "projectsRelationship": "independent",
    "groups": {
      "grafanaPackages": {
        "projectsRelationship": "fixed",
        "projects": [
          "@grafana/data",
          "@grafana/e2e",
          "@grafana/e2e-selectors",
          "@grafana/flamegraph",
          "@grafana/o11y-ds-frontend",
          "@grafana/prometheus",
          "@grafana/runtime",
          "@grafana/schema",
          "@grafana/sql",
          "@grafana/ui"
        ]
      },
      "plugins": {
        "projectsRelationship": "fixed",
        "projects": ["@grafana-plugins/*"]
      }
    }
  },
  "defaultBase": "main"
}
